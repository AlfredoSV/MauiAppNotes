<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiAppNotes.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiAppNotes"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        
            <ShellContent
        Title="New Note"
        ContentTemplate="{DataTemplate local:NewNotePage}"
        Route="MainPage" />
        
            <ShellContent
        Title="List Notes"
        ContentTemplate="{DataTemplate local:ListNotesPage}"
        Route="AboutPage" />

        

    </TabBar>




</Shell>

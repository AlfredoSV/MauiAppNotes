<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppNotes.NewNotePage">

   
        <Grid  Margin="30,50,30,0" RowSpacing="20" BackgroundColor="Aquamarine">
        <Grid.RowDefinitions >
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0"  Text="Name"></Label>
        <Entry Grid.Row="1"  x:Name="TxtName" Keyboard="Text" BackgroundColor="Wheat"></Entry>

        <Label Grid.Row="2"  Text="Crated by"></Label>
        <Entry Grid.Row="3"  x:Name="TxtCreatedBy" Keyboard="Text" BackgroundColor="Wheat"></Entry>

        <Label Grid.Row="4"  Text="Description"></Label>
        <Editor Grid.Row="5" x:Name="TxtDesciption"  BackgroundColor="Wheat"></Editor>

        <Button Grid.Row="6"  Text="Save" Clicked="SaveNote_Clicked"></Button>

        </Grid>

</ContentPage>

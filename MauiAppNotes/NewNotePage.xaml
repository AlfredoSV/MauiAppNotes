<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppNotes.NewNotePage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            
            
            
            <Label Text="Name"></Label>
            <Entry x:Name="TxtName" Keyboard="Text" BackgroundColor="Wheat"></Entry>

            <Label Text="Crated by"></Label>
            <Entry x:Name="TxtCreatedBy" Keyboard="Text" BackgroundColor="Wheat"></Entry>

            <Label Text="Description"></Label>
            <Editor x:Name="TxtDesciption"  BackgroundColor="Wheat"></Editor>

            <Button Text="Save" Clicked="SaveNote_Clicked"></Button>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
